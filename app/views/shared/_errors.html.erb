
<% if obj.errors.any? %>
  <div class="row">
    <div class="large-12 columns">
      <div data-alert class="alert-box alert radius">
        <a href="#" class="close">&times;</a>
        <h5>Correct the following errors:</h5>
        <ul>
          <% obj.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="alert an"
  </div>
<% end %>
