<div class="row">
  <div class="large-12 columns">
    <% unless user_signed_in? %>
      <div class="superman panel callout radius center">
        <h1>Welcome to Snippets</h1>
        <h2>It's a little ostentatious, but useful for important content.</h2>
        <%= link_to "Sign up now", "", class: "button round" %>
        <%= link_to "Browser Snippet Listing", snippets_path , class: "button round small" %>
      </div>
    <% end %>
    <% if user_signed_in? %>
        <div class="superman panel callout radius center">
          <h1>Signed in as <%= current_user.email %></h1>
          <h2>It's a little ostentatious, but useful for important content.</h2>
          <%= link_to "My Snippets", snippets_path, class: "button round" %>
          <%= link_to "New Snippet", new_snippet_path, class: "button round" %>
        </div>
    <% end %>
  </div>
</div>
