<%= render 'shared/page_title', title: "All Snippets" %>
<% @snippets.each do |snippet| %>
  <div class="row">
    <div class="large-2 columns">
      <section class="snippet_info center">
        <%= gravatar_for snippet.user, size: 100 %>
        <p>User email:<br> <%= snippet.user.email %></p>
      </section>
    </div>
  <div class="large-10 columns panel">
    <h4><%= link_to snippet.name, snippet_path(snippet)%></h4>
    <p><%= snippet.summary %></p>
    <p>
      <span class="quiet"><small><%= time_ago_in_words(snippet.created_at) %> ago</small></span>
    </p>
    <div class="pull-right">
      <%= snippet.thumbs_up_total %>
      <%= link_to "+", like_snippet_path(snippet, like: true), method: :post, class: "button" %>
      &nbsp&nbsp&nbsp&nbsp
      <%= snippet.thumbs_down_total %>
      <%= link_to "-", like_snippet_path(snippet, like: false), method: :post, class: "button" %>
    </div>
  </div>
<% end %>
<hr>
